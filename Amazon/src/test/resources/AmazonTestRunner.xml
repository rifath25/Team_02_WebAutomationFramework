<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Amazon Automation Script " parallel="false">

    <parameter name="useCloudEnv" value="false"/>
    <parameter name="cloudEnvName" value="browserstack"/>
    <parameter name="os" value="OS X"/>
    <parameter name="os_version" value="Mojave"/>
    <parameter name="browserName" value="chrome"/>
    <parameter name="browserVersion" value="77"/>
    <parameter name="url" value="https://www.amazon.com"/>

    <test name = "Amazon Home">
        <classes>
            <class name="home.TestHomePage"></class>
            <class name="home.TestHelpPage"></class>
            <class name="home.TestSearchPage"></class>
            <class name="home.TestAmazonJobsPage"></class>
            <class name="home.TestAmazonBlogPage"></class>
        </classes>
    </test>


</suite>